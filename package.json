{
  "name": "@cley_faye/loadconfig",
  "version": "1.1.4",
  "description": "Load configuration from various places",
  "main": "./lib/loader.js",
  "scripts": {
    "prepack": "npx grunt clean build && npm run test",
    "pretest": "npx grunt build",
    "test": "npx nyc mocha lib/test/**/*.test.js"
  },
  "esm": {
    "cache": false
  },
  "nyc": {
    "all": true,
    "exclude-after-remap": false,
    "include": [
      "lib/**/*"
    ],
    "exclude": [
      "lib/test/**/*"
    ],
    "require": "esm"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CleyFaye/loadconfig.git"
  },
  "author": {
    "name": "Gabriel Paul \"Cley Faye\" Risterucci",
    "email": "cleyfaye@cleyfaye.net"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CleyFaye/loadconfig/issues"
  },
  "homepage": "https://github.com/CleyFaye/loadconfig#readme",
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/fs-extra": "^8.1.0",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "esm": "^3.2.25",
    "grunt": "^1.1.0",
    "grunt-contrib-clean": "^2.0.0",
    "grunt-ts": "^6.0.0-beta.22",
    "load-grunt-tasks": "^5.1.0",
    "mocha": "^7.1.1",
    "nyc": "^15.0.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "fs-extra": "^9.0.0"
  },
  "files": [
    "lib/*",
    "!lib/test/**/*"
  ]
}
